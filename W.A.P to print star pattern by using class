#include<iostream>
using namespace std;
class pattern
{
	int n;
	public:
	void starpattern();
};
void pattern::starpattern()
{
    cout<<"enter the valu of n";
    cin>>n;
    for (int i = 0; i < n; i++)
   {
    for (int j = 0; j <= i; j++) 
	{
	 cout << "* ";
        }
        cout << endl;
    }
}
int main()
{
    pattern m;
    m.starpattern();
    return 0;
}
