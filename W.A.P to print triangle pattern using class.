#include<iostream>
using namespace std;
class pattern
{
	int n;
	public:
	void trianglepattern();
};
void pattern::trianglepattern()
{ 
cout<<"enter the valu of n";
cin>>n;{
    int k = 2*n - 2; 
    for (int i=0; i<n; i++) 
    { 
    for (int j=0; j<k; j++) 
   cout <<" "; 
    k = k - 1; 
    for (int j=0; j<=i; j++ ) 
    { 
    cout << "* "; 
    }
    cout << endl; 
    } 
} }
int main()
{
    pattern m;
    m.trianglepattern();
    return 0;
}
